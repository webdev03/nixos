<!-- from https://github.com/linux-surface/linux-surface/blob/e598fa2ca8b691eaf5183f020e188152e7a791ff/contrib/thermald/surface_laptop_go_1/thermal-conf.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<ThermalConfiguration>
  <Platform>
    <Name>Intel Powered Laptop</Name>
    <ProductName>*</ProductName>
    <Preference>QUIET</Preference>
    <ThermalZones>
      <ThermalZone>
        <Type>cpu</Type>
        <TripPoints>
          <TripPoint>
            <SensorType>x86_pkg_temp</SensorType>
            <Temperature>65000</Temperature>
            <type>passive</type>
            <ControlType>SEQUENTIAL</ControlType>
            <CoolingDevice>
              <index>1</index>
              <type>intel_pstate</type>
              <influence>100</influence>
              <SamplingPeriod>10</SamplingPeriod>
            </CoolingDevice>
          </TripPoint>
        </TripPoints>
      </ThermalZone>
    </ThermalZones>
  </Platform>
</ThermalConfiguration>
